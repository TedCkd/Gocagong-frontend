<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/gradient_my_bg">
    <!--  App Bar  -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_lg"
                android:paddingEnd="@dimen/spacing_lg">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/yellow_400"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_coffee"
                        app:tint="@color/white"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textColor="@color/yellow_600"
                    android:layout_marginStart="@dimen/spacing_sm"/>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <!--  Scrollable Content  -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">
            <!--  Profile Card  -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:color="#FFE4E1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_xl">
                    <!--  Avatar  -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/yellow_400"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="카공"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>
                    <!--  Profile Info 영역 (이름 + 로그아웃 버튼) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lg"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- 이름 + 로그아웃 버튼 한 줄 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_profile_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/profile_name"
                                android:textColor="@color/gray_900"
                                android:textSize="18sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="로그아웃"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                app:backgroundTint="#FFD700"
                                app:cornerRadius="999dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:layout_marginStart="@dimen/spacing_sm"/>

                        </LinearLayout>

                        <!-- 필요하면 아래에 다른 텍스트/설명 추가 가능 -->
                        <!-- 예: 등급, 이메일 등 -->
                    </LinearLayout>

                    <!--  Edit Button  -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!--  Stats Grid  -->
            <LinearLayout
                android:id="@+id/menu_my_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:color="#FFE4E1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:src="@drawable/ic_star"
                    app:tint="@color/gray_400" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_reviews"
                    android:textColor="@color/gray_900"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:text="0"
                    android:textColor="@color/gray_400"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:orientation="horizontal">
                <!--  Saved Cafes Stat  -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/radius_lg"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp" />
                <!--  Visited Cafes Stat  -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/radius_lg"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp" />
                <!--  Reviews Stat  -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/radius_lg"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>
            <!--  Saved Cafes Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:color="#FFE4E1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saved_cafes"
                    android:textColor="@color/gray_900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_bookmark_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/gray_400"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/btn_view_all_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/spacing_sm"
                    android:text="@string/view_all"
                    android:textColor="@color/yellow_600"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--  Saved Cafes List  -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saved_cafes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                android:nestedScrollingEnabled="false" />
            <!--  Recent Visits Section  -->
            <!--  Menu Items  -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
